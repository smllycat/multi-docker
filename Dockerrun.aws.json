{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "timcast/docker-testing/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": "128"
        },
        {
            "name": "server",
            "image": "timcast/docker-testing/server",
            "hostname": "api",
            "essential": false,
            "memory": "128"
        },
        {
            "name": "worker",
            "image": "timcast/docker-testing/worker",
            "hostname": "worker",
            "essential": false,
            "memory": "128"
        },
        {
            "name": "nginx",
            "image": "timcast/docker-testing/nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"],
            "memory": "128"
        }
    ]
}